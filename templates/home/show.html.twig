{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}


<div class="container"><br><br>
    <div class="card mb-12" >
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ asset('uploads/images/'~product.image)}}" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <a href="{{ path('app_show_product',{'id':product.id}) }}" class="btn btn-outline-success">Voir le Produit</a>
                        <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                    </div>
                </div>
            </div>
    </div>

    <h2 class="mt-4">Derniers ajouts</h2>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3 mt-4">

                <div class="card" style="width: 18rem">
                    <img src="{{ asset('uploads/images/'~product.image)}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.price }} euros</p>
                        <a href="{{ path('app_show_product',{'id':product.id}) }}" class="btn btn-outline-success btn-block">Voir le Produit</a>
                    </div>
                </div>
            </div>
            
        {% endfor %}
    </div>
</div>
{% endblock %}
