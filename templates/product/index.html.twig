{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    <div class="container"><br><br>
        <h1>Produits</h1><br>
        {% include 'layout/_flash_message.html.twig' %}

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix (en euros)</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-primary">show</a> |
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-primary">edit</a> 


                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun produit</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_product_new') }}" class="btn btn-outline-primary">Ajouter un produit</a>
    </div>
{% endblock %}
