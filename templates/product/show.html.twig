{% block title %}Product{% endblock %}

{% block body %}
<div class="container"><br><br>
    <h1>{{ product.name }}</h1><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}" class="btn btn-outline-primary">Retour Ã  la liste</a>

